<h1>Listing Forms</h1>
<%= link_to 'New Form', new_form_path %>
<%= link_to %>
<% if(@forms.length > 0) %>
<table>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
 
  <% @forms.each do |form| %>
    <tr>
      <td><%= form.name %></td>
      <td><%= link_to 'Show', form_path(form) %></td>
      <td><%= link_to 'Edit', edit_form_path(form) %></td>
      <td><%= link_to 'Destroy', form_path(form),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<% else %>
No Forms Found
<% end %>